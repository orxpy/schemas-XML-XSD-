{
    "name": "Entorno Pruebas Schema HR (XML+Oracle)",
    // Apunta a tu fichero docker-compose.yml principal
    "dockerComposeFile": [
        "../docker-compose.yml" 
    ],
    // Nombre del servicio que acabas de añadir en docker-compose.yml para VS Code
    "service": "vscode-dev-pruebas-hr",
    // La carpeta de trabajo dentro del contenedor (coincide con el mount point)
    "workspaceFolder": "/workspaces/pruebas_schema_HR",
    "customizations": {
        "vscode": {
            "extensions": [
                "Oracle.oracledevtools",         // Para conectarte a Oracle
                "DotJoshJohnson.xml",            // Herramientas para XML (formateo, etc.)
                "redhat.vscode-xml",             // Otra excelente extensión para XML con soporte LSP, validación, etc.
                "VisualStudioExptTeam.vscodeintellicode", // Ayuda inteligente para código
                "ms-vscode.remote-explorer"      // Para gestionar contenedores remotos
            ]
        }
    },
    // Opcional: Comandos a ejecutar después de crear el contenedor por primera vez
    // "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libxml2-utils", // Ejemplo para instalar xmllint (validar XML desde terminal)
    // Si necesitas Java para alguna herramienta XML específica:
    // "features": {
    //  "ghcr.io/devcontainers/features/java:1": {
    //      "version": "17",
    //      "installMaven": "false",
    //      "installGradle": "false"
    //  }
    // }

    // Para asegurar que VS Code se cierra correctamente al cerrar la ventana
    "shutdownAction": "stopCompose"
}
